generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  full_name String   @db.VarChar(30)
  age       Int
  password  String
  role      ROLE     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @db.VarChar(50)
  Blog      Blog[]
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(50)
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User[]
}

enum ROLE {
  ADMIN
  USER
}

model Employee {
  id        Int      @id @default(autoincrement())
  fullname  String   @db.VarChar(30)
  job       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(50)
  price       Int
  isAvailable Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
}

enum GENDER {
  MALE
  FEMALE
}

model Friend {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(50)
  age       Int      @db.Integer()
  gender    GENDER   @default(MALE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Car {
  id         Int      @id @default(autoincrement())
  title      String
  color      String
  make       String
  brand      String
  horsePower Int
  // serial     String   @unique @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
