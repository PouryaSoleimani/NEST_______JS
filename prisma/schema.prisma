generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MY CODES -------------------------------------------------------------------------------------------------------------
enum Role {
  USER
  ADMIN
}

model User {
  id           Int      @id @default(autoincrement())
  user_name    String   @default(value: " ali")
  last_name    String?
  age          Int      @default(value: 18)
  gender       String   @default(value: "MALE")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  role         Role     @default(USER)
  relativeCode String   @unique

  // @@id([firstName, lastName])
}

model Category {
  id    Int    @id @default(autoincrement())
  title String @default(value: "TITLE")
}

enum ProductEnum {
  SHOES
  BAGS
  T_SHIRTS
  PANTS
}

enum GenderEnum {
  MALE
  FEMALE
}

enum CategoryEnum {
  SPORT
  CLASSIC
  CASUAL
  FASHION
}

model Product {
  id          Int          @id @default(autoincrement())
  title       String       @default(value: "UNKNOW PRODUCT")
  price       Int?
  age         Int?         @default(value: 18)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  type        ProductEnum
  gender      GenderEnum
  isAvailable Boolean      @default(value: false)
  category    CategoryEnum
}
